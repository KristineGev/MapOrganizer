<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentTaskCreation">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top"
        android:padding="@dimen/view_padding"
        android:textSize="@dimen/text_size"
        tools:text="location" />


    <EditText
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top"
        android:hint="@string/title_hint"
        android:padding="@dimen/view_padding"
        android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


    <EditText
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top"
        android:hint="@string/description_hint"
        android:lines="3"
        android:padding="@dimen/view_padding"
        android:textSize="@dimen/text_size"
        android:layout_weight="2"/>

            <ImageView
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onImageClick"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top"
        android:padding="@dimen/view_padding"
        android:textSize="@dimen/text_size"
        tools:text="DateAndTime"
        />


       <CheckBox
        android:id="@+id/reminder_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top"
        android:padding="@dimen/view_padding"
        android:text="@string/reminder_text"
        android:textSize="@dimen/text_size" />


<Spinner
    android:id="@+id/reminder_spinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</Spinner>


        <CheckBox
            android:id="@+id/notify_by_place_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notify_by_place_label"

            />



    </LinearLayout>
</ScrollView>